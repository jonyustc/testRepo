@model GAMCUC.ViewModel.PaymentViewModel
@{
    ViewBag.Title = "InvoiceView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int t = 1;
}

<link href="~/Content/print.css" rel="stylesheet" media="print" />


<div class="page-content">
    <div class="page-bar">
        <h2 class="page-title">Payment Invoice</h2>
    </div>
    <!-- BEGIN PAGE TITLE-->
    @*<h3 class="page-title">
        Invoice
    </h3>*@
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    @for (int i = 1; i <= 2; i++)
{

    <div class="invoice  @(@i == 2 ? "duplicate" : "show")">
        <div class="row">
            <div class="col-xs-3 invoice-logo-space">
                <img style="display:inline;position:relative" src="@Url.Content("~/Content/")assets/layouts/layout/img/logo.png" class="img-responsive" alt=""  width="80" height="100"/>
                <p class="invoice-sl">INV: @Model.InvoiceNo</p>
               
            </div>
            <div class="col-xs-6">
                <div class="invoice-heading">
                    <h2>GAM Chartered University College</h2>
                    <p>18,Mehedibag Road,Mehedibag,Chittagong, Bangladesh <br /> Contact: 01979-100108,031-2851408</p>
                </div>
            </div>

            <div class="col-xs-3">
                <p class="invoice-date">Date: @Model.PaymentDate.ToString("dd/MM/yyyy")</p>
            </div>

        </div>

        <div class="row">

            <div class="col-xs-12">

                <p class="invoice-stdName">Student Name: @Model.StudentName <span class="pull-right">ID: @Model.StdID </span> </p>

                <div class="std-info">
                    <p>
                        <span><strong>Address:</strong> @Model.CourseName </span>
                        <span>.......</span>
                        <span><strong>@Model.SemesterName</strong></span>
                        <span class="pull-right"><strong>Session: </strong>.. @Model.Session</span>
                    </p>
                    <p>Mobile No: @Model.Mobile</p>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Payment Type</th>
                            <th>Month</th>
                            <th>Paid Amount</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var sales in Model.PaymentDetailsViewModel)
                        {
                            <tr>
                                <td>@t</td>
                                
                                    @if(sales.PaymentTypeID==8)
                                    {
                                       <td>Scholarship</td>
                                    }
                                    else
                                    {
                                        <td>@sales.PaymentTypeName</td>
                                    }
                               
                                <td>@sales.PayMonth</td>
                                <td>@sales.PayAmount</td>
                            </tr>
                            { t++; }
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <div class="row">

            <div class="col-xs-12 pull-right invoice-block">
                <ul class="list-unstyled amounts">
                    <li>
                        <strong>Total amount:</strong> @Model.GrandTotal
                    </li>
                    <li>
                        <strong>Paid Amount:</strong> @Model.PaidAmount
                    </li>
                    <li>
                        <strong>Due:</strong> @Model.Due
                    </li>
                </ul>
                <p class="in-words"><strong>Total Paid In words:</strong> @ViewBag.words Only</p>
                <div class="authorize-student">
                    Authorized Signature
                </div>
                <div class="authorize">
                    Student/Guardian Signature
                </div>
                <p class="printed-by p-Hide">Printed By: @ViewBag.User @DateTime.Now</p>
            </div>
           
        </div>
    </div>
}
    
    <a class="btn btn-lg blue hidden-print margin-bottom-5 margin-top-10" onclick="javascript:window.print();">
        Print
        <i class="fa fa-print"></i>
    </a>
    
</div>

