@model IEnumerable<GAMCUC.ViewModel.StudentListForPayment>
@{
    ViewBag.Title = "SearchStudentPaymentList";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">

            <div class="portlet-body form">

                <table class="table table-striped table-bordered table-hover" id="datatable_reviews">
                    <thead>
                        <tr role="row" class="heading">
                            <th> SL </th>
                            <th>StdID</th>
                            <th> Student Name</th>
                            <th> Father </th>
                            <th> Course </th>
                            <th>Semester</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>


                        @{
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr role="row" class="filter">
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @item.StdID
                                        </td>

                                        <td>
                                            @item.StdNameEnglish
                                        </td>

                                        <td>
                                            @item.StdFatherNameEnglish
                                        </td>
                                        <td>
                                            @item.CourseName
                                        </td>
                                        <td>
                                            @item.SemesterName
                                        </td>
                                    <td>
                                        @Html.ActionLink("Payment", "StudentPaymentCollection", "Payment", new { area="Students", id = item.Id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("View Invoice", "StdPaymentDetailsShow", "Payment", new { area = "Students", id = item.Id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Payment Report", "PaymentReportsShow", "Payment", new { area = "Students", id = item.Id }, new { @class = "btn btn-info" })
                                    </td>

                            </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


