<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MMTrading</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/mandatory/css")
    @Styles.Render("~/Content/global/css")
    @Styles.Render("~/Content/page-plugin/css")
    @Styles.Render("~/Content/page-style/css")
    @Styles.Render("~/Content/layout/css")
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <link href="~/images/favicon.png" rel="shortcut icon" type="image/x-icon" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">

    <div class="page-wrapper">
        <!-- BEGIN HEADER -->
        <div class="page-header navbar navbar-fixed-top">
            <!-- BEGIN HEADER INNER -->
            <div class="page-header-inner ">
                <!-- BEGIN LOGO -->
                <div class="page-logo">
                    <a href="">
                        <img src="@Url.Content("~/Content/")assets/layouts/layout/img/mmTradingLogo.png" alt="logo" class="logo-default" />
                    </a>
                    <div class="menu-toggler sidebar-toggler">
                        <span></span>
                    </div>
                </div>
                <!-- END LOGO -->
                <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span></span>
                </a>

                <div class="top-menu">

                    @Html.Partial("_LoginPartial")
                </div>

            </div>

        </div>

        <div class="clearfix"> </div>

        <div class="page-container">
            <!-- BEGIN SIDEBAR -->
            <div class="page-sidebar-wrapper">

                <div class="page-sidebar navbar-collapse collapse">

                    <ul class="page-sidebar-menu  page-header-fixed " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200" style="padding-top: 20px">

                        <li class="sidebar-toggler-wrapper hide">
                            <div class="sidebar-toggler">
                                <span></span>
                            </div>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="glyphicon glyphicon-asterisk"></i>
                                <span class="title">Product</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "Product")" class="nav-link nav-toggle">
                                        <span class="title">Add Product</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "Product")" class="nav-link nav-toggle">
                                        <span class="title">Mangage Product</span>
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="glyphicon glyphicon-asterisk"></i>
                                <span class="title">Category</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "Category")" class="nav-link nav-toggle">
                                        <span class="title">Add Category</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "Category")" class="nav-link nav-toggle">
                                        <span class="title">Mangage Category</span>
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="glyphicon glyphicon-asterisk"></i>
                                <span class="title">Ship Info</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "Ship")" class="nav-link nav-toggle">
                                        <span class="title">Ship List</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "Ship")" class="nav-link nav-toggle">
                                        <span class="title">Add New</span>
                                    </a>

                                </li>
                                
                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-diamond"></i>
                                <span class="title">Production Purchase</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "ProductionPurchase")" class="nav-link nav-toggle">
                                        <span class="title">Purchase List</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "ProductionPurchase")" class="nav-link nav-toggle">
                                        <span class="title">Add New</span>
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-diamond"></i>
                                <span class="title">DirectSale Purchase</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "DirectSalePurchase")" class="nav-link nav-toggle">
                                        <span class="title">Purchase List</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "DirectSalePurchase")" class="nav-link nav-toggle">
                                        <span class="title">Add New</span>
                                    </a>

                                </li>

                            </ul>
                        </li>
                            
                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-diamond"></i>
                                <span class="title">Production</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "Production")" class="nav-link nav-toggle">
                                        <span class="title">Add Production</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "Production")" class="nav-link nav-toggle">
                                        <span class="title">Manage Production</span>
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-diamond"></i>
                                <span class="title">Sales</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Create", "Sales")" class="nav-link nav-toggle">
                                        <span class="title">Add Sales</span>
                                    </a>

                                </li>
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "Sales")" class="nav-link nav-toggle">
                                        <span class="title">Manage Sales</span>
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item  ">
                            <a href="javascript:;" class="nav-link nav-toggle">
                                <i class="icon-diamond"></i>
                                <span class="title">Stock</span>
                                <span class="arrow"></span>
                            </a>
                            <ul class="sub-menu">
                                
                                <li class="nav-item  ">
                                    <a href="@Url.Action("stockReport", "Stock")" class="nav-link nav-toggle">
                                        <span class="title">Stock Report</span>
                                    </a>

                                </li>

                            </ul>
                        </li>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item  ">
                                    <a href="@Url.Action("Register", "Account")" class="nav-link nav-toggle">
                                        <i class="icon-wallet"></i>
                                        <span class="title">Register</span>

                                    </a>

                                </li>
                                 <li class="nav-item  ">
                                    <a href="@Url.Action("Index", "User")" class="nav-link nav-toggle">
                                        <i class="icon-wallet"></i>
                                        <span class="title">User List</span>

                                    </a>

                                </li>
                               
                            }
                        
                    </ul>
                </div>
                <!-- END SIDEBAR -->
            </div>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN CONTENT BODY -->
                @RenderBody()

                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->

        </div>
        <!-- END CONTAINER -->
        <!-- BEGIN FOOTER -->
        <div class="page-footer">
            <div class="page-footer-inner">
                &copy; @DateTime.Now.Year - M/S. M.M Trading

            </div>
            <div class="scroll-to-top">
                <i class="icon-arrow-up"></i>
            </div>
        </div>
        <!-- END FOOTER -->
    </div>

    <!--[if lt IE 9]>
     @Scripts.Render("~/bundles/IEScript")
     <![endif]-->
    @*<script src="~/Scripts/jquery.js"></script>*@
    @Scripts.Render("~/bundles/core/js")
    @Scripts.Render("~/bundles/page-plugin/js")
    @Scripts.Render("~/bundles/global/js")
    @Scripts.Render("~/bundles/page-scripts/js")
    @Scripts.Render("~/bundles/layout/js")
    
    @RenderSection("scripts", required: false)
</body>
</html>